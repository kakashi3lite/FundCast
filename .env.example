# FundCast Environment Configuration

# Application
ENVIRONMENT=development
DEBUG=true

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your_secret_key_must_be_32_characters_or_longer_for_security
JWT_SECRET_KEY=your_jwt_secret_key_must_be_32_characters_or_longer
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Encryption key for sensitive data (base64 encoded 32-byte key)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=fPL2BaxAYKKjr0ZjN_Tz7rJ1c_Xn_Lz8DhbE9gCGmM0=

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/fundcast
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# AI/ML
ONNX_MODEL_PATH=models/
VLLM_ENDPOINT=http://localhost:8001/v1

# External APIs - Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs - Persona (for KYC)
PERSONA_API_KEY=your_persona_api_key
PERSONA_TEMPLATE_ID=your_persona_template_id

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer your_otlp_token

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@fundcast.ai

# File Upload
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Compliance APIs
SEC_FILING_ENDPOINT=https://www.sec.gov/edgar/
FINRA_API_ENDPOINT=https://api.finra.org/

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_MARKET_CREATION=true
ENABLE_AI_FEATURES=true